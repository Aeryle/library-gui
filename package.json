{
  "name": "library-gui",
  "author": "Aeryle",
  "description": "A software to magically edit Shiina's CSS in some clicks",
  "version": "1.0.0",
  "main": "build/main.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jquery": "^3.3.31",
    "@types/node": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.15.0",
    "bootstrap": "^4.4.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.1",
    "dotenv": "^8.2.0",
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2",
    "eslint": "^6.8.0",
    "eslint-config-marine": "^5.3.2",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-promise": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "imports-loader": "^0.8.0",
    "jquery": "^3.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "phin": "^3.4.1",
    "pnp-webpack-plugin": "^1.5.0",
    "popper.js": "^1.16.1",
    "regedit": "^3.0.3",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.0",
    "sass-migrator": "^1.1.1",
    "style-loader": "^1.1.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "dev:build": "yarn webpack --config config/webpack.config.js -d",
    "build": "yarn webpack --config config/webpack.config.js -p",
    "dev:watch": "yarn webpack --config config/webpack.config.js -d -w",
    "watch": "yarn webpack --config config/webpack.config.js -p -w",
    "dev:start": "yarn dev:build && electron .",
    "start": "yarn build && electron ."
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "dotenv": "^8.2.0",
    "jquery": "^3.5.0",
    "phin": "^3.4.1",
    "popper.js": "^1.16.1",
    "regedit": "^3.0.3"
  },
  "build": {
    "files": [
      "build/*.*",
      "build/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": "src/vbs",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "executableName": "LibraryCustomizer",
      "target": [
        {
          "target": "tar.gz"
        },
        {
          "target": "AppImage"
        }
      ]
    }
  }
}
